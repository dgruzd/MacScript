	email = donotsendhere@gmail.com
[core]
	editor = vim # mvim -f
	packedGitLimit = 1g
	bigFileThreshold = 1m
[color]
	ui = true
[push]
	default = simple
[pull]
	rebase = true
[rerere]
	enabled = true
[alias]
	s = status -s
	lg = log --oneline --decorate --all --graph
	branchauthors = "! for branch in `git branch -r | grep -v HEAD`;do echo `git show --format=\"%ai %ar by %an\" $branch | head -n 1` \t$branch; done | sort -r"
	y = !(git add -A . && git commit -amsaved_at_`date +%Y-%m-%d__%H:%M:%S` && git pull --rebase && git push && echo "" && git log -1 --stat) || git pull --rebase
